@using Frontend.Models

<a href="/community/programming" class="block bg-white p-4 rounded-xl shadow-md hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
    <div class="flex items-center space-x-4">
        <img class="h-12 w-12 rounded-full flex-shrink-0" src="@($"https://placehold.co/48x48/#{Community.BackgroundColor}/FFFFFF?text={Community.Name.ToString().ToUpper()[0]}")" alt="r/programming icon" />
        <div class="flex-1 min-w-0">
            <p class="font-bold text-gray-800 truncate block">r/@Community.Name</p>
            <div class="flex items-center space-x-1 text-sm text-gray-500 mt-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
                    <circle cx="9" cy="7" r="4" />
                    <path d="M22 21v-2a4 4 0 0 0-3-3.87" />
                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                </svg>
                <span>@Community.MemberCount Members</span>
            </div>
        </div>
    </div>
</a>

@code {
	[Parameter, EditorRequired]
	public CommunityModel? Community { get; set; }
}
