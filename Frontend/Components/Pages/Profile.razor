@code {
    private string DisplayName { get; set; } = "current_user";
    private string Email { get; set; } = "user@example.com";
    private string Location { get; set; } = "";
    private string Website { get; set; } = "";
    private string About { get; set; } = "";
    private string NewPassword { get; set; } = "";
    private string ConfirmPassword { get; set; } = "";

    private bool ShowOnlineStatus { get; set; } = false;
    private bool AllowChatRequests { get; set; } = true;
    private bool ShowInSearch { get; set; } = true;

    private void HandleSubmit()
    {
        // Basic validation
        if (string.IsNullOrWhiteSpace(DisplayName))
        {
            Console.WriteLine("Display name is required");
            return;
        }

        if (string.IsNullOrWhiteSpace(Email))
        {
            Console.WriteLine("Email is required");
            return;
        }

        if (!string.IsNullOrEmpty(NewPassword) && NewPassword != ConfirmPassword)
        {
            Console.WriteLine("Passwords do not match");
            return;
        }

        // Handle form submission
        Console.WriteLine("Profile updated successfully!");
        Console.WriteLine($"Display Name: {DisplayName}");
        Console.WriteLine($"Email: {Email}");
        Console.WriteLine($"Location: {Location}");
        Console.WriteLine($"Website: {Website}");
        Console.WriteLine($"About: {About}");
    }

    private void CancelChanges()
    {
        // Reset form to original values or navigate away
        DisplayName = "current_user";
        Email = "user@example.com";
        Location = "";
        Website = "";
        About = "";
        NewPassword = "";
        ConfirmPassword = "";
        Console.WriteLine("Changes cancelled");
    }

    private void ShowDeleteConfirmation()
    {
        // Show confirmation dialog for account deletion
        Console.WriteLine("Show delete confirmation dialog");
    }

    private string GetInitial()
    {
        return !string.IsNullOrEmpty(DisplayName)
            ? DisplayName.Substring(0, 1).ToUpper()
            : "U";
    }
}