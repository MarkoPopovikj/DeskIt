@page "/profile"

@inject AuthService AuthService

@using Frontend.Services

<div class="max-w-6xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-800 mb-8">Edit Profile</h1>

    <div class="grid grid-cols-1 xl:grid-cols-3 gap-6">
        <!-- Main Content -->
        <div class="xl:col-span-2">
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
                <form @onsubmit="HandleSubmit" @onsubmit:preventDefault="true">
                    <!-- Profile Picture Section -->
                    <div class="mb-8">
                        <label class="block text-sm font-semibold text-gray-700 mb-4">Profile Picture</label>
                        <div class="flex items-center space-x-6">
                            <div class="relative">
                                <img class="h-24 w-24 rounded-full object-cover ring-4 ring-gray-100" 
                                     src="@($"https://placehold.co/96x96/6366F1/{AuthService.CurrentUser.BackgroundColor}?text={AuthService.CurrentUser.Username[0].ToString().ToUpper()}")"
                                     alt="Profile Picture" />
                                <div class="absolute -bottom-2 -right-2">
                                    <button type="button" 
                                            class="bg-blue-600 text-white p-2 rounded-full hover:bg-blue-700 transition-colors shadow-lg">
                                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                            <div class="space-y-3">
                                <button type="button" 
                                        class="bg-gray-100 text-gray-700 font-medium py-3 px-6 rounded-lg hover:bg-gray-200 transition-colors border border-gray-300">
                                    Upload New Picture
                                </button>
                                <p class="text-sm text-gray-500">JPG, PNG or GIF. Max size 5MB.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Basic Information -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
                        <div>
                            <label for="displayName" class="block text-sm font-semibold text-gray-700 mb-2">
                                Display Name
                            </label>
                            <input @bind="DisplayName" @bind:event="oninput"
                                  id="displayName"
                                  type="text" 
                                  class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" 
                                  placeholder="Enter your display name" />
                        </div>

                        <div>
                            <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                                Email Address
                            </label>
                            <input @bind="Email" @bind:event="oninput"
                                   id="email"
                                   type="email"
                                   readonly
                                   class="w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-0 focus:border-gray-300 cursor-not-allowed"
                                   placeholder="your@email.com" />
                        </div>

                    </div>

                    @* <!-- Location and Website --> *@
